{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@global/*": [
                "./src/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@constants/*": [
                "./src/constants/*"
            ]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
}